.page-header
  %h1 Listing departments
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Status
      %th Created
      %th Updated
      %th
  %tbody
    - @departments.each do |department|
      %tr
        %td= department.name
        %td
          -if !department.enable?
            disable
        %td= time_tag department.created_at.to_time
        %td= time_tag department.updated_at.to_time
        %td
          = link_to 'Show', department, class: 'btn btn-default btn-xs'
          = link_to 'Edit', edit_department_path(department), class: 'btn btn-default btn-xs'
          = link_to 'Disable', department, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'
%br
= link_to 'New', new_department_path, class: 'btn btn-primary'
