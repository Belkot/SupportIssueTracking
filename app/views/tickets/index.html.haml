%h1 Listing tickets

%table
  %thead
    %tr
      %th Name
      %th Email
      %th Department
      %th Reference
      %th Subject
      %th Status
      %th Owner
      %th
      %th
      %th

  %tbody
    - @tickets.each do |ticket|
      %tr
        %td= ticket.name
        %td= ticket.email
        %td= ticket.department.name
        %td= ticket.reference
        %td= ticket.subject
        %td= ticket.statuses.order(created_at: :desc).first.status_type.name
        - if ticket.owners.first
          %td= ticket.owners.order(created_at: :desc).first.user.username
        - else
          %td
        %td= link_to 'Show', ticket
        %td= link_to 'Edit', edit_ticket_path(ticket)
        %td= link_to 'Destroy', ticket, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Ticket', new_ticket_path
