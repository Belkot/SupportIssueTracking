%h1 Listing users

%table
  %thead
    %tr
      %th Name
      %th Admin
      %th Created
      %th Updated
      %th Enable
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td
          - if user.admin?
            administrator
        %td= user.created_at
        %td= user.updated_at
        %td
          - if !user.enable?
            disable
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Disable', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to('New user', new_user_path) if current_user.admin?